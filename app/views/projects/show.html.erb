<div class="project-info-header">
  <h1><%= @project.name %></h1>
  <h6>
    <% @project.categories.each do |category| %>
      <%= link_to category.name, category %>
    <% end %> | <%= link_to 'Location', @project.location %>
  </h6>
</div>

<div class="project-info-grid">
  <div class="project-info-content">
    <!--LEFT SIDE CONTENT-->
    <div class="project-info-multimedia">
      <!--VIDEOS/PICS-->
      <%= image_tag '', class: 'project-cover', alt: 'project-cover', data: {src: 'holder.js/600x400'} %>
    </div>

    <div class="project-info-description">
      <%= markdown(@project.description) %>
    </div>
  </div>

  <div class="project-info-sidebar">
    <!--RIGHT SIDE CONTENT-->
    <div class="project-statistics">
      <span class="project-popularity">
        <span class="popularity-highlight">
          #<%= @project.sort_order %>
        </span> Top Growing Project
      </span>

      <div class="progress">
        <div class="progress-bar" role="progressbar"></div>
      </div>

      <h6><%= number_to_currency(@project.collected_budget) %> PLN</h6>
      <p>of <%= number_to_currency(@project.required_budget) %>PLN goal</p>
      <p><!-- TO BE IMPLEMENTED %--> <%= rand 100 %> people backed this up</p>
    </div>

    <div class="project-actions">
      <button class="btn btn-lg btn-success">BACK THIS PROJECT</button>
      <button class="btn btn-lg btn-outline-success">+ NEED: IT SKILLS</button>
      <button class="btn btn-lg btn-outline-success">+ NEED: MEETING PLACE</button>
      <%= link_to 'And 2 more...' %>
    </div>

    <div class="project-backer-info">
      2 People and 1 Organisation helped with their resources.
      <%= link_to "What's that about?" %>
    </div>

    <div class="project-social-info">
      <!--TO BE IMPLEMENTED-->
      <button class="btn btn-lg btn-primary">SHARE TO HELP!</button>
      <%= link_to '', class: 'btn btn-lg btn-link' do %>
          Friend and <%= rand 10 %> others shared or liked it
      <% end %>
      <span>
        <% 10.times do %>
          <%= image_tag '', class: 'rounded', alt: 'social-interaction-icon', data: {src: 'holder.js/40x40'} %>
        <% end %>
      </span>
    </div>

    <div class="project-executives">
      <section class="project-sponsors">
        <p>SPONSORS</p>
        <button class="btn btn-lg">
          <%= image_tag '', class: 'rounded', alt: 'executive-sponsor-icon', data: {src: 'holder.js/140x70'} %>
        </button>
      </section>

      <section class="project-team">
        <p>PROJECT TEAM</p>
        <button class="btn btn-lg project-team-leader">
          <%= image_tag '', class: 'rounded', alt: 'team-leader-icon', data: {src: 'holder.js/50x50'} %>
          Leader Megatron
        </button>
        <div class="btn btn-lg project-team-members">
          <span>
            <% 10.times do %>
              <%= image_tag '', class: 'rounded', alt: 'team-member-icon', data: {src: 'holder.js/40x40'} %>
            <% end %>
          </span>
        </div>
      </section>
    </div>

    <div class="report-project">
      <%= link_to '', class: 'btn btn-lg btn-link' do %>
          <%= image_tag '', class: '', alt: 'report-project-icon', data: {src: 'holder.js/35x35'} %>
          REPORT THIS PROJECT
      <% end %>
    </div>
  </div>
</div>
