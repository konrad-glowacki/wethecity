<div id="projects-top" class="carousel" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag 'homepage_top.svg', class: 'd-block w-100', alt: 'we the city' %>

      <div class="carousel-caption">
        <h1 class="text-uppercase">We, The<br />City</h1>
        <p class="text-uppercase">Accelerate your Smart City projects</p>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Sign up', new_user_registration_path,  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#user-profile-modal'}  %>

<div id="user-profile-modal" class="modal fade" tabindex="-1" role="dialog"></div>

<div class="pb-3">
  <%= render "search_form" %>
</div>

<div class="card-deck">
  <%= render @projects %>
</div>
