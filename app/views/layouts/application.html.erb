      </a>
    </div>
    <div class="collapse navbar-collapse" id="main-navbar-collapse">
      <!--additional navbar buttons-->
    </div>
  </div>
</nav>
<div class="container-fluid">
  <%= flash_messages %>
  <%= yield %>
</div>
