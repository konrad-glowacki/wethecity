<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLongTitle"><%= t('.edit_profile') %></h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <%= form_for @user, as: :user, url: registration_path(@user) do |f| %>
      <div class="modal-body">
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :volunteer %><br />
          <%= f.select :volunteer, options_for_select([true, false]), {}, { class: 'form-control' } %>
        </div>
        <ul>
          <%= f.fields_for :resources do |resource_form| %>
            <li>
              What you can deliver: <%= resource_form.text_field :name %>
              <%= resource_form.hidden_field :kind, value: 'skill' %>
            </li>
          <% end %>
        </ul>
        <ul>
          <%= f.fields_for :resources do |resource_form| %>
            <li>
              Assets: <%= resource_form.text_field :name %>
              <%= resource_form.hidden_field :kind, value: 'asset' %>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= t('.close') %></button>
        <%= f.submit t('.update'), { class: 'btn btn-primary btn-block' } %>
      </div>
    <% end %>
  </div>
</div>
