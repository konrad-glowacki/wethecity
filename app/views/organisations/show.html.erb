<div class="form-row">
  <div class="col-md-4">
    <%= image_tag @organisation.logo.url(:thumb) if @organisation.logo? %>
  </div>
  <div class="col-md-5">
    <h1><%= @organisation.name %></h1>
    <p><%= @organisation.type %></p>
    <p><%= @organisation.address %></p>
    <p><%= @organisation.phone_number %> | <%= @organisation.email %></p>
    <p><%= link_to 'Facebook', @organisation.facebook_url %> | <%= link_to 'Linkedin', @organisation.linkedin_url %></p>
    <p><%= @organisation.description %></p>
  </div>
</div>
